<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/live_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.activity.live.LiveStreamActivity">

    <!-- ComposeView for Jetpack Compose content -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/composeView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!--Camera view-->
    <!--<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.pedro.library.view.OpenGlView
            android:id="@+id/openGlView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.pedro.library.view.OpenGlView
            android:id="@+id/openGlView"
            app:aspectRatioMode="fill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--<com.pedro.library.view.OpenGlView
        android:id="@+id/openGlView"
        app:aspectRatioMode="adjust"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true" />-->

    <!--watermark and live time-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!--watermark-->
        <ImageView
            android:id="@+id/img_watermark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/watermark_logo" />

        <!--live time-->
        <TextView
            android:id="@+id/txt_live_time"
            style="@style/axiforma_800W"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_corner"
            android:padding="8dp"
            android:visibility="gone"
            tools:text="Live 00:12" />

        <!--cross btn-->
        <ImageButton
            android:id="@+id/img_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:src="@drawable/ic_cross" />

    </RelativeLayout>

    <!--SM Link-->
    <RelativeLayout
        android:id="@+id/layout_shareable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_bottom"
        android:background="@drawable/top_rounded_white_bg"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <TextView
            style="@style/axiforma_700W12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="@string/your_shareable_links" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_sm_soho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/soho_logo" />

            <ImageView
                android:id="@+id/img_sm_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="8dp"
                android:src="@drawable/logo_fb"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/img_sm_yt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="8dp"
                android:src="@drawable/logo_yt"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/img_sm_li"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="8dp"
                android:src="@drawable/logo_li"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>

    <!--Bottom video control and start button-->
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_rounded_dark_bg"
            android:orientation="horizontal"
            android:padding="16dp"
            android:weightSum="100">

            <!--mic, cam share btn-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/img_btn_cam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingEnd="16dp"
                    android:src="@drawable/ic_camera" />

                <ImageButton
                    android:id="@+id/img_btn_mic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:paddingEnd="16dp"
                    android:src="@drawable/ic_mic" />

                <ImageButton
                    android:id="@+id/img_btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_share_selector" />

            </LinearLayout>

            <!--start end button-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_go_live"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#E13831"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_go_live"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:src="@drawable/livecast" />

                    <TextView
                        android:id="@+id/txt_go_live"
                        style="@style/axiforma_800W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:text="@string/go_live"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <!--overlay countdown-->
    <RelativeLayout
        android:id="@+id/layout_countdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A3000000"
        android:orientation="vertical"
        android:visibility="gone">

        <!--center countdown text-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_countdown_msg"
                style="@style/axiforma_700W14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:text="@string/livecast_start" />

            <TextView
                android:id="@+id/txt_countdown"
                style="@style/axiforma_950W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="3" />

            <ImageView
                android:id="@+id/img_done_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_done_tick"
                android:visibility="gone" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/img_btn_abort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:background="@drawable/ic_abort"
            android:contentDescription="@null" />
    </RelativeLayout>

</RelativeLayout>