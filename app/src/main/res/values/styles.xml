<resources>

    <!--texts-->
    <style name="axiforma_800W">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/axiforma_800</item>
    </style>

    <style name="axiforma_950W">
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/axiforma_950</item>
    </style>

    <style name="axiforma_700W14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/axiforma_700</item>
    </style>

    <style name="axiforma_700W12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/app_dark</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/axiforma_700</item>
    </style>

    <style name="axiforma_950w16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/axiforma_950</item>
    </style>

    <style name="axiforma_800W_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/axiforma_800</item>
    </style>

    <!--buttons-->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="icon">@drawable/ic_livestream</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">16dp</item>
    </style>


    <!--progress bar-->
    <style name="AppProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@android:color/white</item>
        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:width">14dp</item>
        <item name="android:height">14dp</item>
    </style>

</resources>
